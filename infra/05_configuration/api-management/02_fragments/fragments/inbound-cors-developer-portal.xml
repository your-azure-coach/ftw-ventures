<fragment>
    <cors allow-credentials="true">
        <allowed-origins>
            <origin>{{apim-global-developer-portal-url}}</origin>
        </allowed-origins>
        <allowed-methods preflight-result-max-age="300">
            <method>*</method>
        </allowed-methods>
        <allowed-headers>
            <header>*</header>
        </allowed-headers>
        <expose-headers>
            <header>*</header>
        </expose-headers>
    </cors>
</fragment>